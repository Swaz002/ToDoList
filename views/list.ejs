<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>toDoList</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oleo+Script+Swash+Caps&display=swap" rel="stylesheet">
    <script></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a href="" class="navbar-brand">ToDoList</a>
    </nav>
    <div class="box" id="heading">
        <h1><%= present %></h1>
    </div>
    <div class="box">

        <% it.forEach(function(item) { %>
            <form action="/delete" method="post">
                <div class='item'>
                    <input name="checkbox" type="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
                    <p><%= item.items %></p>
                </div>
            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" name="newListItem" placeholder="New Item" autocomplete="off">
            <button class="btn" type="submit" name="Button">+</button>
        </form>
    </div>
</body>
</html>